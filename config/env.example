# Hospital Application Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_USER=hospital_user
MYSQL_PASSWORD=your_secure_hospital_password

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_HOSPITAL=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Security (untuk production)
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-here

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
PROMETHEUS_ENABLED=true
ACTUATOR_USERNAME=admin
ACTUATOR_PASSWORD=admin123

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
